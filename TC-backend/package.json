{
  "name": "truecrime-backend",
  "version": "1.0.0",
  "description": "True Crime tracking app backend service",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:integration": "vitest run src/**/*.integration.test.ts",
    "test:e2e": "vitest run src/**/*.e2e.test.ts",
    "test:contracts": "vitest run src/**/*.contract.test.ts",
    "test:performance": "vitest run src/**/*.performance.test.ts",
    "test:security": "vitest run src/**/*.security.test.ts",
    "test:unit:watch": "vitest watch --config vitest.config.unit.ts",
    "test:integration:watch": "vitest watch **/*.integration.test.ts",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:ci:unit": "vitest run src/**/__tests__/**/*.test.ts src/**/test/*.test.ts --exclude=\"**/*.integration.test.ts\" --exclude=\"**/*.e2e.test.ts\" --exclude=\"**/*.contract.test.ts\" --exclude=\"**/*.performance.test.ts\" --exclude=\"**/*.security.test.ts\" --coverage --reporter=verbose",
    "test:ci:integration": "vitest run **/*.integration.test.ts --reporter=verbose",
    "test:ci:e2e": "vitest run **/*.e2e.test.ts --reporter=verbose",
    "test:ci:security": "vitest run **/*.security.test.ts --reporter=verbose",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx src/lib/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "temporal:worker": "tsx src/workflows/worker.ts",
    "search:sync": "tsx src/scripts/sync-search.ts",
    "search:reset": "tsx src/scripts/reset-search.ts"
  },
  "keywords": [
    "truecrime",
    "fastify",
    "trpc",
    "typescript",
    "supabase"
  ],
  "author": "True Crime App Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^8.5.0",
    "@fastify/env": "^4.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.1.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^8.3.1",
    "@prisma/client": "^5.8.1",
    "@supabase/supabase-js": "^2.39.3",
    "@temporalio/client": "^1.9.1",
    "@temporalio/worker": "^1.9.1",
    "@trpc/server": "^10.45.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.1.4",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "meilisearch": "^0.37.0",
    "nanoid": "^5.0.4",
    "p-queue": "^8.1.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "superjson": "^2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "prisma": "^5.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.41.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.48.0",
    "@opentelemetry/resources": "^1.21.0",
    "@opentelemetry/sdk-node": "^0.48.0",
    "@opentelemetry/semantic-conventions": "^1.21.0",
    "@sentry/node": "^7.99.0"
  }
}
