# True Crime Tracker Environment Variables

# ============================================
# FRONTEND (Expo/React Native)
# ============================================

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_API_CACHE_TIME=300000

# Sentry Error Tracking (Get from sentry.io)
EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# Supabase Configuration (Get from supabase.com)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# BACKEND (Node.js/Fastify)
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (Supabase)
DATABASE_URL=postgresql://postgres:password@localhost:5432/truecrime
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Redis Cache (Use Upstash for free tier)
REDIS_URL=redis://localhost:6379
UPSTASH_URL=https://your-instance.upstash.io
CACHE_PREFIX=tc

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Monitoring
SLOW_QUERY_THRESHOLD=1000
SENTRY_DSN=your-backend-sentry-dsn-here
SENTRY_TRACES_SAMPLE_RATE=0.1

# External APIs
WATCHMODE_API_KEY=your-watchmode-api-key
TMDB_API_KEY=your-tmdb-api-key
REELGOOD_API_KEY=your-reelgood-api-key
JUSTWATCH_API_KEY=your-justwatch-api-key
GRACENOTE_API_KEY=your-gracenote-api-key

# Search (Meilisearch)
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_MASTER_KEY=your-master-key-here

# Temporal Workflow Engine (Optional)
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@truecrime.app

# Push Notifications (Expo)
EXPO_PUSH_TOKEN=your-expo-push-token

# Authentication
JWT_SECRET=your-jwt-secret-here-minimum-32-characters
AUTH_SESSION_DURATION=7d

# ============================================
# WEB (Remix)
# ============================================

# Remix Configuration
REMIX_PUBLIC_API_URL=http://localhost:3000
REMIX_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
REMIX_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# DEVELOPMENT TOOLS
# ============================================

# Prisma
DATABASE_PRISMA_URL=postgresql://postgres:password@localhost:5432/truecrime?pgbouncer=true
DATABASE_URL_NON_POOLING=postgresql://postgres:password@localhost:5432/truecrime

# Testing
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/truecrime_test
CI=false

# ============================================
# PRODUCTION CONFIGURATION
# ============================================

# CDN
CDN_URL=https://cdn.truecrime.app

# Analytics (Optional)
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
ENABLE_REDIS_CACHE=true
ENABLE_QUEUE_SYSTEM=false
ENABLE_SOCIAL_FEATURES=true
ENABLE_PREMIUM_FEATURES=false

# Security
CORS_ORIGIN=https://truecrime.app,https://www.truecrime.app
SECURE_COOKIES=true
CSRF_SECRET=your-csrf-secret-here

# ============================================
# NOTES
# ============================================
# 1. Copy this file to .env and fill in your values
# 2. Never commit .env files to version control
# 3. Use different values for development and production
# 4. Rotate secrets regularly in production
# 5. Use environment-specific files: .env.local, .env.production